{
  "name": "messenger-unleashed",
  "productName": "Messenger Unleashed",
  "version": "1.1.14",
  "description": "Messenger desktop app with extra features",
  "main": "main.js",
  "scripts": {
    "dev": "electron . --js-flags=\"--max-old-space-size=4096\"",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "bump": "node scripts/bump.js"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.messenger.unleashed",
    "productName": "Messenger Unleashed",
    "mac": {
      "category": "public.app-category.social-networking",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "dmg": {
      "title": "Messenger Unleashed",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "main.js",
      "preload.js",
      "themes.css"
    ]
  }
}
