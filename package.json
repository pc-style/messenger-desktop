{
  "name": "messenger-unleashed",
  "productName": "Messenger Unleashed",
  "version": "2.0.1",
  "description": "Messenger desktop app with extra features",
  "type": "module",
  "main": "build/main/index.js",
  "scripts": {
    "build:ts": "tsc -p tsconfig.json",
    "dev": "bun run build:ts && electron . --js-flags=\"--max-old-space-size=4096\"",
    "debug": "bun run build:ts && DEBUG_REQUEST_BLOCKER=1 DEBUG_REQUEST_BLOCKER_GRAPHQL_ALL=1 DEBUG_REQUEST_BLOCKER_WS=1 DEBUG_REQUEST_BLOCKER_WS_DECODE=1 DEBUG_REQUEST_BLOCKER_WS_TRACE_TYPING=1 EXP_BLOCK_TYPING_OVERLAY=1 electron . --js-flags=\"--max-old-space-size=4096\"",
    "build": "bun run build:ts && electron-builder",
    "build:mac": "bun run build:ts && electron-builder --mac",
    "build:win": "bun run build:ts && electron-builder --win",
    "bump": "node scripts/bump.cjs"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "typescript": "^5.6.3"
  },
  "build": {
    "appId": "com.messenger.unleashed",
    "productName": "Messenger Unleashed",
    "publish": [
      {
        "provider": "github",
        "owner": "pcstyleorg",
        "repo": "messenger-desktop"
      }
    ],
    "mac": {
      "category": "public.app-category.social-networking",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "dmg": {
      "title": "Messenger Unleashed",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 270,
          "y": 350,
          "type": "file",
          "path": "README.txt"
        }
      ]
    },
    "files": [
      "build/**",
      "icon.icns",
      "icon.ico",
      "README.txt",
      "themes.css",
      "trayIcon.png"
    ]
  }
}
